<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemActivity"
    android:background="@drawable/blackbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/Burgers"
            android:textAlignment="center"
            android:textColor="#FFEB3C"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.066" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="410dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/burger1"
                        tools:layout_editor_absoluteX="-1dp"
                        tools:layout_editor_absoluteY="107dp" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="410dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/burger2"
                        tools:layout_editor_absoluteX="-1dp"
                        tools:layout_editor_absoluteY="107dp" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="410dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/burger3"
                        tools:layout_editor_absoluteX="-1dp"
                        tools:layout_editor_absoluteY="107dp" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="410dp"
                        android:layout_height="250dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/burger4"
                        tools:layout_editor_absoluteX="-1dp"
                        tools:layout_editor_absoluteY="107dp" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Classic Cheeseburger:
A timeless favorite, our Classic Cheeseburger features a juicy beef patty topped with melted cheddar cheese, fresh lettuce, ripe tomato, and seed bun. Perfectly simple, yet irresistibly delicious.
\n\nBBQ Bacon Burger:
Experience the smoky flavor of our BBQ Bacon Burger, stacked with crispy bacon, cheddar BBQ sauce. This burger is a hearty and savory treat that packs a punch.
\n\nVeggie Burger:
Our Veggie Burger is a delightful option for vegetarians and meat-lovers alike. Made with a flavorful plant-based patty, this burger is loaded with grilled vegetables, avocado, and a zesty aioli, served on a whole-grain bun.
\n\nSpicy Jalapeño Burger:
Turn up the heat with our Spicy Jalapeño Burger! This fiery creation includes a beef patty topped with pepper jack cheese, fresh jalapeños, spicy mayo, and crisp lettuce. It’s a bold choice for those who love a kick."
                    android:textAlignment="textStart"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="100dp"
                        android:backgroundTint="#FFEB3B"
                        android:text="Go Back"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="155dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="100dp"
                        android:backgroundTint="#FFEB3B"
                        android:text="Profile"
                        android:textColor="@color/black"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>