<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HotdogsActivity"
    android:background="@drawable/blackbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/HotDogs"
                android:textAlignment="center"
                android:textColor="#FFEB3C"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/hotdog1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/hotdog2"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/hotdog3"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/hotdog4"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView5"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/hotdog5"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Classic Hot Dog:
Simple and satisfying, our Classic Hot Dog features a juicy, all-beef frankfurter nestled in a soft bun, topped with your choice of mustard, ketchup, and onions. It’s the perfect snack or meal on the go.
\n\nChili Cheese Dog:
Indulge in the ultimate comfort food with our Chili Cheese Dog. This hot dog is smothered in savory beef chili and topped with melted cheddar cheese, offering a hearty and satisfying experience.
\n\nBacon-Wrapped Hot Dog:
For a decadent twist, try our Bacon-Wrapped Hot Dog. This indulgent treat features bun with a choice of toppings like grilled onions and jalapeños.
\n\nChicago-Style Hot Dog:
Enjoy the bold flavors of our mustard, relish, onions, tomatoes, pickles, and a dash of celery salt, all served in a poppy seed bun. It’s a regional favorite with a punch."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Go Back"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="155dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>