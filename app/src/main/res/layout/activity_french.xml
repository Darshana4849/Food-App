<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FrenchActivity"
    android:background="@drawable/blackbg">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/FrenchFries"
                android:textAlignment="center"
                android:textColor="#FFEB3C"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/french1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/french2"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/french3"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/french4"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Classic French Fries:
Our Classic French Fries are crispy on the outside, tender on the inside, and perfectly salted. These golden fries are a must-have side for any meal or a satisfying snack on their own.
\n\nCurly Fries:
Add some fun to your meal with our Curly Fries. These spiral-cut fries are seasoned to perfection and offer a unique texture that’s crispy and delicious in every bite.
\n\nLoaded Cheese Fries:
Take your fries to the next level with our Loaded Cheese Fries, topped with a generous helping of melted cheddar cheese, crispy bacon bits, and a drizzle of ranch dressing. They’re an indulgent treat you won’t want to miss.
\n\nSweet Potato Fries:
For a healthier yet tasty option, try our Sweet Potato Fries. These fries are lightly seasoned and offer a naturally sweet flavor with a crispy texture, making them a delicious alternative to traditional fries."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Go Back"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="155dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>