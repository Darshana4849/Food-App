<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pizzaActivity"
    android:background="@drawable/blackbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/Pizzas"
                android:textAlignment="center"
                android:textColor="#FFEB3C"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/pizza1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/pizza2"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/pizza3"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/pizza4"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Margherita Pizza:
A classic Italian favorite, our Margherita Pizza features a thin, crispy crust topped with fresh mozzarella, vine-ripened tomatoes, and fragrant basil leaves, finished with a drizzle of olive oil. Simple, fresh, and full of flavor.
\n\nPepperoni Pizza:
Enjoy the all-time favorite Pepperoni Pizza, loaded with generous slices of spicy pepperoni,sauce, all on a perfectly baked crust. It’s the ultimate comfort food.
\n\nBBQ Chicken Pizza:
A fusion of flavors, our BBQ Chicken Pizza is topped with tender grilled chicken, tangy BBQ sauce, red onions, and a blend of mozzarella and cheddar cheeses. It’s a sweet and savory twist on a pizza classic.
\n\nVegetarian Deluxe Pizza:
Our Vegetarian Deluxe Pizza is a garden-fresh delight, loaded with colorful bell peppers, mushrooms, onions, black olives, and spinach, all on a bed of tomato sauce and mozzarella cheese. Perfect for veggie lovers."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Go Back"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="155dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>