<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SandwichesActivity"
    android:background="@drawable/blackbg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/Sandwiches"
                android:textAlignment="center"
                android:textColor="#FFEB3C"
                android:textSize="34sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.066" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sandwich1"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sandwich2"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sandwich3"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="410dp"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/sandwich4"
                            tools:layout_editor_absoluteX="-1dp"
                            tools:layout_editor_absoluteY="107dp" />

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Turkey Club Sandwich:
A classic choice, our Turkey Club Sandwich features layers of tender turkey breast, crispy bacon, fresh lettuce, tomato, and mayo, all stacked on toasted multigrain bread. It’s a hearty and satisfying meal.
\n\nGrilled Cheese Sandwich:
Simple and comforting, our Grilled Cheese Sandwich is made with golden-brown bread and gooey melted cheese. It’s the perfect comfort food, especially when paired with a bowl of hot soup.
\n\nItalian Sub:
Packed with flavor, our Italian Sub includes a combination of salami, ham, pepperoni, and provolone cheese, topped with lettuce, tomatoes, onions, and a drizzle of Italian dressing. It’s a taste of Italy in every bite.
\n\nChicken Caesar Wrap:
Enjoy a fresh and tasty option with our Chicken Caesar Wrap. This sandwich features grilled chicken, crisp romaine lettuce, parmesan cheese, and Caesar dressing, all wrapped in a soft tortilla for a light and flavorful meal."
                        android:textAlignment="textStart"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="100dp"
                            android:layout_marginTop="25dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Go Back"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="155dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginRight="100dp"
                            android:backgroundTint="#FFEB3B"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>